{
    "title": "南宁白话小册子",
    "description": "介绍南宁白话的基础知识",
    "author": "leimaau",
    "plugins": [
	    "-lunr",
		"-search",
		"search-plus",
        "navigator",
		"-sharing",
		"sharing-plus",
		"flexible-alerts",
		"splitter",
		"chapter-fold",
		"github",
		"lightbox",
		"tbfed-pagefooter",
		"pageview-count",
		"theme-comscore",
		"anchors",
		"accordion"
    ],
	
    "pluginsConfig": {
        "github": {
            "url": "https://github.com/leimaau"
        },
		"pluginsConfig": {
			"tbfed-pagefooter": {
				"copyright":"Copyright &copy leimaau 2018",
				"modify_label": "该文件修订时间：",
				"modify_format": "YYYY-MM-DD HH:mm:ss"
			}
		},
        "sharing": {
           "douban": false,
           "facebook": false,
           "google": false,
           "hatenaBookmark": false,
           "instapaper": false,
           "line": false,
           "linkedin": false,
           "messenger": false,
           "pocket": false,
           "qq": false,
           "qzone": false,
           "stumbleupon": false,
           "twitter": false,
           "viber": false,
           "vk": false,
           "weibo": false,
           "whatsapp": false,
           "all": ["douban","qq", "qzone","weibo"]
        }
	}
}